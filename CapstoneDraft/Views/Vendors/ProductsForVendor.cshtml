@model CapstoneDraft.ViewModels.ProductsForVendor

@{
    ViewBag.Title = "Products For Vendor";
}

<h2>Products For Vendor</h2>

<table class="table">
    <tr>
        <th>
            Part Number
        </th>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Unit
        </th>
        <th>
            Photo Path
        </th>
        <th>
            Active
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Products", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "Products", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Products", new { id = item.Id }, null)
            </td>

        </tr>
    }
