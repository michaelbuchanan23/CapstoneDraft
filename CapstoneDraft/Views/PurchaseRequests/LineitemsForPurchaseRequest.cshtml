@model CapstoneDraft.ViewModels.LineitemsForPurchaseRequest
@{
    ViewBag.Title = "Lineitems For Purchase Request";
}

<h2>Lineitems For Purchase Request</h2>

<table class="table">
    <tr>
        <th>
            Part Number
        </th>
        <th>
            Description
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PurchaseRequestLineitems) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.PartNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "PurchaseRequestLineItems", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "PurchaseRequestLineItems", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "PurchaseRequestLineItems", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>